<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_step_7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="用药名称"
            android:textColor="@color/text_color_black"/>

        <View
            android:layout_width="@dimen/medicine_line_width"
            android:layout_height="match_parent"
            android:background="@color/text_color_white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_morning"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="早"
                    android:textColor="@color/text_color_black"/>

                <View
                    android:layout_width="@dimen/medicine_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_white"/>

                <TextView
                    android:id="@+id/tv_noon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="中"
                    android:textColor="@color/text_color_black"/>

                <View
                    android:layout_width="@dimen/medicine_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_white"/>

                <TextView
                    android:id="@+id/tv_night"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晚"
                    android:textColor="@color/text_color_black"/>

                <View
                    android:layout_width="@dimen/medicine_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_white"/>

                <TextView
                    android:id="@+id/tv_before_sleep"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="睡前"
                    android:textColor="@color/text_color_black"/>

                <View
                    android:layout_width="@dimen/medicine_line_width"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_white"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/medicine_line_width"
            android:layout_height="match_parent"
            android:background="@color/text_color_white"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="备注"
            android:textColor="@color/text_color_black"/>

        <View
            android:layout_width="@dimen/medicine_line_width"
            android:layout_height="match_parent"
            android:background="@color/text_color_white"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red_btn_bg_pressed_color"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/medicine_line_width"
        android:background="@color/text_color_white"/>

</LinearLayout>